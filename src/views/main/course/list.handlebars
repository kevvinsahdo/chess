<div class="row">
    <div class="col">
        <h1>Cursos da Ufam</h1>
    </div>
    <div class="col">
        <a href="/courses/create">
            <button type="button" class="btn btn-primary float-lg-right">Adicionar</button>
        </a>
    </div>
</div>
<table class="table table-hover">
    <tr class="table-active">
        <td>Sigla</td>
        <td>Nome</td>
        <td>Opções</td>
    </tr>
    {{#each courses}}
    <tr>
        <td>{{this.acronym}}</td>
        <td>{{this.name}}</td>
        <td>
            <i class="fas fa-eye"></i>
            <a href="/courses/{{this.id}}/edit">
                <i class="fas fa-pencil-alt"></i>
            </a>
            <a href="/courses/{{this.id}}/del">
                <i class="fas fa-trash"></i>
            </a>
        </td>
    </tr>
    {{/each}}
</table>
